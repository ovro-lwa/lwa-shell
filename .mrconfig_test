# myrepos config file for ovro-lwa Project

[lwa-pyutils]
checkout =
    git clone git@github.com:ovro-lwa/lwa-pyutils.git

[lwa-antpos]
checkout =
    git clone git@github.com:ovro-lwa/lwa-antpos.git

[mnc_python]
checkout =
    git clone git@github.com:ovro-lwa/mnc_python.git

[caltech-lwa]
checkout =
    git clone https://github.com/realtimeradio/caltech-lwa
    cd caltech-lwa
    git submodule init control_sw/libs/casperfpga
    git submodule update

[caltech-bifrost-dsp]
checkout = 
    git clone https://github.com/realtimeradio/caltech-bifrost-dsp.git
    cd caltech-bifrost-dsp
    git submodule init
    git submodule update

[bifrost]
checkout =
    git clone https://github.com/ledatelescope/bifrost

[dsa-pyutils]
checkout =
    git clone git@github.com:dsa110/dsa110-pyutils.git

[lwa-cfg]
checkout =
    git clone git@github.com:ovro-lwa/lwa-cfg.git

[ovro_data_recorder]
checkout =
    git clone git@github.com:lwa-project/ovro_data_recorder.git
